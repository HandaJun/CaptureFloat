<Window x:Class="CaptureFloat.VIEW.ScreenStreamingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureFloat.VIEW"
        mc:Ignorable="d"
        Title="画面共有中" Height="120" Width="250" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
        Closing="Window_Closing"
        >
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="IpTb" Text="http://127.0.0.1:8080" Margin="5" VerticalAlignment="Center"/>
        <Button x:Name="CopyBt" Content="コピー" Margin="5,5,5,5" Grid.Row="0" Grid.Column="1" Click="CopyBt_Click"/>
        <Button x:Name="StopBt" Content="中止" Margin="5,5,5,5" Grid.Row="1" Grid.ColumnSpan="2" Click="StopBt_Click"/>
    </Grid>
</Window>
